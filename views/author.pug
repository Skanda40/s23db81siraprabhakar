extends layout

block content
  h1= title

  - const results = [{name: "Paulo Coelho", expertise: "Novels", age: 50}, {name: "JK Rowling", expertise: "Fiction", age: 60}, {name: "Dale Carnegie", expertise: "Self-help", age: 70}]

  div(class="container-fluid")
    div(class="row")
      each author, index in results 

        div(class="col-sm-2", onclick=`buy(${index})`) #{author.name}, #{author.expertise}, #{author.age}
        
  script.
    function buy(b) {
      alert(`You purchased Item ${b+1}`)
    }